<%= form_for(@package, :html => { multipart: true }) do |f| %>

	<div class="row">
    	<form class="col s12">

      		<div class="row">
      			<div class="input-field col s2">
      			</div>
        		<div class="input-field col s8">
    				<%= f.label :title %><br>
    				<%= f.text_field :title, class: "form-control" %> 
  				</div>
  				<div class="input-field col s2">
      			</div>
  			</div>

  	<div class= "row">

  		<div class="input-field col s2">
      	</div>

  		<div class="input-field col s8">
    	<%= f.label :description %><br>
    	<%= f.text_area :description, id:"textarea1", class: "materialize-textarea"%> 
  		</div>
  		<div class="input-field col s2">
      	</div>
  	</div>

  	<div class="row">
  		<div class="input-field col s2">
      	</div>

      	<!-- Image Upload -->
      	<div class="input-field col s8">
	    	<form action="#">
    				<div class="file-field input-field">
    					<div class="btn">
    						<span>
    							Upload Image
    						</span>
    						<%= f.file_field :image %>
    					</div>
    					<input class="file-path validate" type="text"/>
        			</div>
    			</div>
	    	</form>  	
  		</div>

  		<div class="input-field col s2">
    	</div>


  		<br><br> <br><br>

  	<div class= "row">	
  		<div class="input-field col s5">
      	</div>
		<!-- submit button -->
	  	<div class=>
	    	<%= f.submit class: "btn btn-primary" %>
	    </div>
	</div>

    	</form>	
  	</div>
<% end %>
