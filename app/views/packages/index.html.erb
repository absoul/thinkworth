<h5 class="right-align">
	<small class="waves-effect waves-light btn"><%= link_to("Add New Package", new_package_path, class: "link_button")%></small>
</h5>

<% @packages.limit(4).each do |p|%>
	<ul>
		<li class = "list-block">
			<div> <%= link_to(image_tag(p.image, size:"250x250"), p) %> </div>
			<div> <%= link_to(p.title, p) %> </div>
		</li>
	</ul>
<% end %>
