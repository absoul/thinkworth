<%= render 'new_package_link' %>

<% @packages.limit(4).each do |p|%>
	<ul>
		<li class = "list-block">
			<div> <%= link_to(image_tag(p.image, size:"240x240"), p) %> </div><br>
			<div> <%= link_to(p.title, p) %> </div>
		</li>
	</ul>
<% end %>
